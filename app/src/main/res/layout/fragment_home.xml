<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home">

    <TextView
        android:id="@+id/recive_username"
        android:text="TextView"
        android:textSize="16sp"
        android:textColor="@color/Black"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Jangan lupa minum tablet tambah darah ya!"
        android:textSize="14sp"
        android:textColor="@color/Black"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="90dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/bckgrnd"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:text="Status Anemia"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_width="150dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="130dp">

                <TextView
                    android:text="Lv"
                    android:textSize="20sp"
                    android:textColor="#720DEE"
                    android:fontFamily="@font/poppins_semibold"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="0"
                    android:textSize="100sp"
                    android:textColor="#720DEE"
                    android:fontFamily="@font/poppins_semibold"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Ayo cek level mu"
                    android:textSize="22sp"
                    android:textColor="@color/Black"
                    android:fontFamily="@font/poppins_semibold"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="false"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:progress="0"
                    android:progressDrawable="@drawable/linear_progress_bar" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_perbaharui"
                    android:text="Perbaharui"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="13sp"
                    android:textColor="@color/TextColor"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_background"
                    android:layout_marginStart="90dp"
                    android:layout_marginEnd="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
